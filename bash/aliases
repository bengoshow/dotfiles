#[grunt-start]
alias gw="grunt; grunt watch"
#[grunt-end]

#[general-start]
alias a='cat ~/.aliases'
alias c=clear
alias h=history
alias l='ls -ltr'
alias la="ls -Gla"
alias whois="whois -h whois-servers.net"
# Recursively delete `.DS_Store` files
alias cleanup="find . -name '*.DS_Store' -type f -ls -delete"
alias rspec="rspec"
alias rake='noglob rake'
#[general-end]

#[ip-start]
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ipw="ipconfig getifaddr en1"
alias ipe="ipconfig getifaddr en0"
#[ip-end]

#[apache-start]
alias apache="sudo apachectl -k restart"
#[apache-end]

#[git-start]
alias git=hub
# alias git=/usr/local/git/bin/git
alias g='cat ~/.gitconfig'
alias gs='git status '
alias ga='git add -A '
alias gap='git add -p .'
alias gb='git branch '
alias gc='git commit'
alias gca='git commit --amend -C HEAD'
alias gd='git difftool'
# alias go='git checkout '
alias gl='git pull --rebase'
alias gk='gitk --all&'
alias gx='gitx --all'
alias gup='git fetch origin && git rebase origin/master'
alias glog='git log --format='\''%Cgreen%h%Creset %C(cyan)%an%Creset - %s - %C(yellow)%ar'\'' --graph'
alias undopush="git push -f origin HEAD^:master"
#[git-end]

#[deploy-start]
alias md='mina deploy user=rtarr'
#[deploy-end]

#[images-start]
alias psd="open -a /Applications/Adobe\ Photoshop\ CS6/Adobe\ Photoshop\ CS6.app"
#[images-end]

#[ror-start]
alias ror='cd ~/dev/_rails'
alias cof='cd ~/dev/_coffee'
alias sr='script/rails'
alias sc='script/rails console'
alias ss='script/rails server'
alias rs='rspec'
alias cu='cucumber -r features'
alias cuw='cucumber --profile wip'
alias ropen='open http://localhost:3000'
alias jopen='open http://localhost:3000/jasmine'
#[ror-end]

#[heroku-start]
alias hp='git push heroku master'
alias hd='git push heroku deploy:master'
alias hopen='heroku open'
#[heroku-end]

#[cheats-start]
alias ccs='cat -b ~/Documents/cheatsheets/cucumber.txt'
alias hcs='cat -b ~/Documents/cheatsheets/heroku.txt'
#[cheats-end]

#[javascript-start]
alias jsc='/System/Library/Frameworks/JavaScriptCore.framework/Versions/A/Resources/jsc'
#[javascript-end]

#[mysql-start]
alias mysql=/usr/local/mysql/bin/mysql
alias mysqladmin=/usr/local/mysql/bin/mysqladmin
#[mysql-end]

#[cleanup-start]
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"
#[cleanup-end]

#[shortcuts-start]
alias d="cd ~/Documents/Dropbox"
alias p="cd ~/projects"
alias gh="cd ~/git-repos"
alias u="cd ~"
alias dot="subl ~/git-repos/dotfiles"
#[shortcuts-end]